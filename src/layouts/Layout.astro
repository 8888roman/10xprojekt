---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="border-b bg-background">
      <nav class="mx-auto flex w-full max-w-6xl flex-wrap items-center justify-between gap-4 px-4 py-4">
        <a class="text-lg font-semibold" href="/generate">10x-cards</a>
        <div class="flex flex-wrap items-center gap-3 text-sm">
          <a class="rounded-md px-3 py-2 hover:bg-accent" href="/generate">Generowanie</a>
          <a class="rounded-md px-3 py-2 hover:bg-accent" href="/flashcards">Moje fiszki</a>
          <a class="rounded-md px-3 py-2 hover:bg-accent" href="/study">Sesja nauki</a>
          <a class="rounded-md px-3 py-2 hover:bg-accent" href="/account">Konto</a>
        </div>
      </nav>
    </header>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
